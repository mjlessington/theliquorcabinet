<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <div class="container"> 
        <div class="text-center">
    <nav>
        <%- include('./partials/nav.ejs') %>
    </nav>
    
        
    <h1 class="display-3 bg-warning">Add Item to Cabinet</h1>
        <form action="/cabinets" method="POST">
            <div class="form-group">
                <label for="formGroupExampleInput"></label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Brand Name of Liquor" name="name">
              </div>
              <div class="form-group">
                <label for="formGroupExampleInput2"></label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Type of Liquor (tequila, vodka, etc)" name="type">
              </div>
              <div class="form-group">
                <label for="formGroupExampleInput"></label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Light or Dark" name="color">
              </div>
              <div class="form-group">
                <label for="formGroupExampleInput"></label>
                <textarea type="text" class="form-control" id="formGroupExampleInput" placeholder="Notes (description, where to find, pairings, etc)" name="notes"></textarea>
              </div>
              <div class="form-group">
                <label for="formGroupExampleInput3"></label>
                <input type="number" class="form-control" id="formGroupExampleInput3" placeholder="Enter Quantity" name="quantity">
              </div>
              <div class="form-group form-check bg-warning">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="inStock">
                <label class="form-check-label" for="exampleCheck1 bg-secondary">In Stock</label>
              </div>
              <button type="submit" class="btn btn-primary">Add item</button>


            
        </form>
     </div>
    </div>
</body>
</html>